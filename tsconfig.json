{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "useUnknownInCatchVariables": false
  }
}
